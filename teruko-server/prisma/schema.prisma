generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Image {
  filename   String       @unique
  title      String?
  source     String?
  createdAt  DateTime     @default(now()) @db.Timestamptz(3)
  updatedAt  DateTime     @default(now()) @updatedAt @db.Timestamptz(3)
  width      Int
  height     Int
  id         Int       @id @unique(map: "Image_id_new_key") @default(autoincrement())
  ImageToTag ImageToTag[]

  @@index([createdAt(sort: Desc)])
}

model Tag {
  slug         String       @id
  categorySlug String?
  category     TagCategory? @relation(fields: [categorySlug], references: [slug])
  ImageToTag   ImageToTag[]
}

model TagCategory {
  slug  String  @id
  color String?
  tags  Tag[]
}

model ImageToTag {
  tagSlug String
  imageId Int
  Image   Image  @relation(fields: [imageId], references: [id], onDelete: Cascade)
  Tag     Tag    @relation(fields: [tagSlug], references: [slug], onDelete: Cascade)

  @@id([imageId, tagSlug])
  @@unique([imageId, tagSlug], map: "_ImageToTag_imageId-tagSlug_index")
  @@index([imageId], map: "_ImageToTag_imageId_index")
  @@index([tagSlug], map: "_ImageToTag_tagSlug_index")
  @@map("_ImageToTag")
}
